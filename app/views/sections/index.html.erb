<%= render :partial => "layouts/admin_header" %>
<h1>Listing sections</h1>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sections.each do |section| %>
  <tr>
    <td><%= section.title %></td>
    <td><%= section.content.html_safe unless section.content.blank? %></td>
    <td><%= link_to 'Edit', edit_section_path(section) %></td>
    <!--<td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
  </tr>
<% end %>
</table>
