<% if @password == "Secret!" %>
  $(".secret-footer").show();
  $(".content").html("<%= escape_javascript(render :partial => "hidden") %>");
  $(".secrets-list a, .secrets .title a").click(function(e){
    var id = $(this).data("id");
    $.post("/secret-selection", {id: id}, function(){});
    return false;
  });
<% else %>
  $("#secret_password").val("");
<% end %>
