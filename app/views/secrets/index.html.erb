<%= render :partial => "layouts/admin_header" %>
<h1>Listing secrets</h1>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Blurb</th>
    <th>Content</th>
    <th>Pubish date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @secrets.each do |secret| %>
  <tr>
    <td><%= secret.title %></td>
    <td><%= secret.blurb %></td>
    <td><%= secret.content %></td>
    <td><%= secret.publish_date %></td>
    <td><%= link_to 'Show', secret %></td>
    <td><%= link_to 'Edit', edit_secret_path(secret) %></td>
    <td><%= link_to 'Destroy', secret, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Secret', new_secret_path %>
