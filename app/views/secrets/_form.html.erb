<%= simple_form_for(@secret) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :blurb %>
    <%= f.input :content %>
    <%= f.input :image %>
    <%= f.input :youtube, :label => "YouTube ID" %>
    <label class="string optional control-label" for="publish_date">Publish date</label>
    <div id="secret-publish_date_datetimepicker" class="input-append">
      <input value="<%= @secret.publish_date.strftime("%m/%d/%Y %I:%M:%S %p") unless @secret.publish_date.blank? %>" class="string optional date-time-pick" id="publish_date" name="secret[publish_date]" size="50" type="text" data-format="MM/dd/yyyy HH:mm:ss PP"></input>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar" class="icon-calendar"></i>
      </span>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
